<?xml version="1.0"?>
<Container version="2">
  <Name>VantageCamLive</Name>
  <Repository>ghcr.io/YOUR_USERNAME/vantagecamlive:latest</Repository>
  <Registry/>
  <Network>br0</Network>
  <MyIP></MyIP>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/YOUR_USERNAME/vantagecamlive</Project>
  <Overview>A high-performance stream processor that overlays real-time weather and rotating advertisements. Supports any camera aspect ratio (16:9, 32:9, etc.) by automatically letterboxing the output to a standard 1080p format.</Overview>
  <Category>MediaServer:Video</Category>
  <WebUI>http://[IP]:8554/</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/YOUR_USERNAME/vantagecamlive/main/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1766530859</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="Source RTSP URL" Target="RTSP_SOURCE" Default="" Mode="" Description="RTSP URL of your camera (e.g. rtsp://user:pass@192.168.1.50:554/stream)" Type="Variable" Display="always" Required="true" Mask="true">rtsp://user:password@192.168.1.50:554/stream</Config>
  <Config Name="Output Username" Target="ADMIN_USER" Default="admin" Mode="" Description="Username for the new stream" Type="Variable" Display="always" Required="true" Mask="false">admin</Config>
  <Config Name="Output Password" Target="ADMIN_PASS" Default="password" Mode="" Description="Password for the new stream" Type="Variable" Display="always" Required="true" Mask="true">your_secure_password</Config>
  <Config Name="YouTube Stream Key" Target="YOUTUBE_KEY" Default="" Mode="" Description="Your YouTube Live Stream Key (leave blank to disable YouTube relay)" Type="Variable" Display="always" Required="false" Mask="true"></Config>
  <Config Name="YouTube Stream URL" Target="YOUTUBE_URL" Default="rtmp://a.rtmp.youtube.com/live2" Mode="" Description="YouTube RTMP ingest server" Type="Variable" Display="always" Required="true" Mask="false">rtmp://a.rtmp.youtube.com/live2</Config>
  <Config Name="GPU Device" Target="/dev/dri" Default="" Mode="" Description="Intel GPU Passthrough" Type="Device" Display="always" Required="true" Mask="false">/dev/dri</Config>
  <Config Name="Video Bitrate" Target="VIDEO_BITRATE" Default="14M" Mode="" Description="Quality of output stream (e.g. 4M to 14M)" Type="Variable" Display="always" Required="false" Mask="false">14M</Config>
  <Config Name="Appdata Path" Target="/config" Default="/mnt/user/appdata/vantagecam" Mode="rw" Description="Folder for weather icons and ad images" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/vantagecam</Config>
  <Config Name="Weather Latitude" Target="WEATHER_LAT" Default="" Mode="" Description="Your Latitude" Type="Variable" Display="always" Required="true" Mask="false">40.7128</Config>
  <Config Name="Weather Longitude" Target="WEATHER_LON" Default="" Mode="" Description="Your Longitude" Type="Variable" Display="always" Required="true" Mask="false">-74.0060</Config>
  <Config Name="Weather Timezone" Target="WEATHER_TIMEZONE" Default="America/New_York" Mode="" Description="Important for Day/Night logic" Type="Variable" Display="always" Required="true" Mask="false">America/New_York</Config>
  <Config Name="Weather Location Label" Target="WEATHER_LOCATION" Default="CITY NAME" Mode="" Description="The name shown on the overlay" Type="Variable" Display="always" Required="false" Mask="false">NEW YORK</Config>
  <Config Name="TL Ad Width" Target="SCALE_TL" Default="500" Mode="" Description="Size of TL ads" Type="Variable" Display="always" Required="false" Mask="false">500</Config>
  <Config Name="TL Rotation Timer" Target="OVERLAYAD_ROTATE_TIMER" Default="30" Mode="" Description="Seconds per ad" Type="Variable" Display="always" Required="false" Mask="false">30</Config>
  <Config Name="TR Ad Width" Target="SCALE_TR" Default="400" Mode="" Description="Size of TR popup" Type="Variable" Display="always" Required="false" Mask="false">400</Config>
  <Config Name="TR Show Seconds" Target="TR_SHOW_SECONDS" Default="20" Mode="" Description="Duration visible" Type="Variable" Display="always" Required="false" Mask="false">20</Config>
  <Config Name="TR Hide Seconds" Target="TR_HIDE_SECONDS" Default="300" Mode="" Description="Duration hidden" Type="Variable" Display="always" Required="false" Mask="false">300</Config>
  <Config Name="Day Start Hour" Target="DAY_START_HOUR" Default="6" Mode="" Description="0-23 format" Type="Variable" Display="always" Required="false" Mask="false">6</Config>
  <Config Name="Day End Hour" Target="DAY_END_HOUR" Default="18" Mode="" Description="0-23 format" Type="Variable" Display="always" Required="false" Mask="false">18</Config>
  <Config Name="Audio API Key" Target="AUDIO_API_KEY" Default="" Mode="" Description="Optional password for Audio API" Type="Variable" Display="always" Required="false" Mask="true"></Config>
  <TailscaleStateDir/>
</Container>